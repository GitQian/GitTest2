<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dip"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="2015年12月1日"
        android:textColor="#777777"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv_msgTypeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/send_time"
        android:layout_marginTop="2dp"
        android:focusable="false"
        android:padding="3dp"
        android:src="@drawable/icon_service_msg" />

    <LinearLayout
        android:id="@+id/tv_chatcontent_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_time"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_msgTypeIcon"
        android:background="@drawable/msg_up"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_baoyang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_4s" />

        <Button
            android:id="@+id/bt_yuyue"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"

            android:text="马上预约"
            android:textColor="#ffa031"
            android:textSize="16sp" />
        <!--android:background="@drawable/item_click"-->
        <Button
            android:id="@+id/bt_baoyang"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:text="已保养"
            android:textColor="#ffa031"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_service_chatcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_chatcontent_ll"
        android:layout_alignRight="@id/tv_chatcontent_ll"
        android:layout_below="@id/tv_chatcontent_ll"
        android:background="@drawable/msg_down"
        android:paddingLeft="15dp"
        android:text="测试"
        android:textColor="#222"
        android:textSize="16sp" />

</RelativeLayout>